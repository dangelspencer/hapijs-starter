{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2015", "es2017"],
  },
  "exclude": [
    "node_modules",
    "Typings",
    "test",
    "coverage"
  ]
}